<h1>Your cocktail's specifications</h1>
<h2><%= @cocktail.name %></h2>
<%= link_to "Back to the list of cocktails", cocktails_path %>

<div>
  <h3>recipe</h3>
  <table>
    <tbody>
      <thead>
        <th>Ingredient</th>
        <th>Description</th>
        <th>Action</th>
      </thead>
      <% @cocktail.doses.each do |dose| %>
        <tr>
          <td><%= dose.ingredient.name %></td>
          <td><%= dose.description %></td>
          <td>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
              <i class="fa fa-trash destroy_dose"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description, label: "Dose" %>
  <%= f.association :ingredient, label: "Ingredients"%>
  <%= f.submit "add a dose", class: "btn btn-primary" %>
<% end %>
